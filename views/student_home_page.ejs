<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Home | Student</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' href='../bootstrap/dist/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="../css/header.css">
    <link rel="stylesheet" type="text/css" href="../css/student_home_page.css">
</head>

<body>
    <div class="container mt-1">
        <%- include('./partials/header.ejs') %>
    </div>

    <div class="container mt-3">

        <%- include('./partials/logged_user.ejs') %>

            <div class="row mt-3">
                <div class="col-6 searchResultSection">
                    <div id="searchFormContainer">
                        <h4>Search Your Result</h4>
                        <form id="search-form" action="/result/find" method="post">
                            <table>
                                <tr>
                                    <td>Roll No. *</td>
                                    <td><input type="text" name="rollNumber" class="form-control mb-2">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Date of Birth *</td>
                                    <td><input type="date" name="dob" class="form-control mb-2">
                                    </td>
                                </tr>

                                <tr>
                                    <td></td>
                                    <td><button type="submit" class="btn btn-primary">Find Result</button></td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="col-6 displayResultSection">
                    <!-- The container shows a status text in case of both found or not -->
                    <!-- The container also contains result table. It is displayed only if the result is found -->
                    <div id="resultContainer">
                        <!-- Here we display the status. If result is found or not. -->
                        <h6 id="status-text"> Result will show here</h6>

                        <div id="result" style="display: none;">
                            <table>
                                <tr>
                                    <td>Student Name</td>
                                    <td id="result-studentName">Nikhil Bhardwaj</td>
                                </tr>
                                <tr>
                                    <td>Roll No.</td>
                                    <td id="result-rollNumber">22</td>
                                </tr>
                                <tr>
                                    <td>Date of Birth</td>
                                    <td id="result-dob">09-10-99</td>
                                </tr>
                                <tr>
                                    <td>Score</td>
                                    <td id="result-marks">324</td>
                                </tr>
                                <tr>
                                    <td>Status</td>
                                    <td id="result-clearStatus">Passed</td>
                                </tr>
                                <tr>
                                    <td>Result Created By</td>
                                    <td id="result-teacherName">Rahul Mishra</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <script src="../js/log_out.js"></script>
    <script src="../js/student_home_page.js"></script>
    
</body>

</html>